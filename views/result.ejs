<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>college()</title>
    <style>
        body {
            padding: 0px;
            margin: 0px;
        }
        .header-div {
            background-color:rgba(64, 224, 208, 0.507);
        }
        .title-div, .option-div {
            display: inline-block;
        }
        .title-div span {
            color: turquoise;
        }
        .option-div {
            float: right;
            margin: 1rem;
        }
        .option-div > a {
            text-decoration: none;
            background-color: rgba(238, 130, 238, 0);
            color: white;
            border: none;
            outline: none;
            font-size: 17px;
            padding: 0.5rem;
            margin-left: 0.5rem;
        }
        .option-div > a:hover {
            border: 0.1px solid white;
        }
        .list-div > li {
            display: inline-block;
            font-size: 30px;
            font-weight: bold;
            text-shadow: 2px 2px 4px #000000;
        }
        .list-div > .a {
            color: violet;
        }
        .list-div > .b {
            color: indigo;
        }
        .list-div > .c {
            color: blue;
        }
        .list-div > .d {
            color: green;
        }
        .list-div > .e {
            color: yellow;
        }
        .list-div > .f {
            color: orange;
        }
        .list-div > .g {
            color: red;
        }

        .result-div > h1 {
            margin: 10rem 1rem;
            color: rgb(248, 2, 64);
        }
        .action-btn-div > a {
            background-color: turquoise;
            color: white;
            font-weight: bold;
            padding: 1rem 1.5rem;
            font-size: 18px;
            text-decoration: none;
            box-shadow: rgb(250, 153, 169) 1px 1px 2px 1px;
            border-radius: 0.5rem;
        }
        .action-btn-div > a:hover {
            box-shadow: rgb(252, 138, 157) 1px 1px 5px 1px;
        }
    </style>
</head>
<body>
    <header>
        <div class="header-div">
            <div class="title-div">
                <ul class="list-div">
                    <li class="a">c</li>
                    <li class="b">o</li>
                    <li class="c">l</li>
                    <li class="d">l</li>
                    <li class="e">e</li>
                    <li class="f">g</li>
                    <li class="g">e</li>
                    <li class="h">(</li>
                    <li class="i">)</li>
                </ul>
            </div>
            <div class="option-div">
                <a href="/home" class="home-btn">Home</a>
                <!-- <a href="/events" class="events-btn">Events</a> -->
                <!-- <a href="/register" class="register-btn">Register</a> -->
                <!-- <a href="/add-event" class="add-btn">Add Event</a> -->
            </div>
        </div>
    </header>
    <center>
        <div class="result-div">
            <h1><span class="result-data"><%= data.result %></span><%= data.text %></h1>
        </div>
        <div class="action-btn-div">
            <a href="" class="action-btn"><%= data.btnText %></a>
        </div>
    </center>
   
    <script>
        //display generate certificate button:
        let actionBtn = document.querySelector(".action-btn");

        let resultText = document.querySelector(".result-data").innerText;
        console.log("resultText",resultText);
        
        if(resultText == "Winner" || resultText == "I Runner-up" || resultText == "II Runner-up" || resultText == "Participation") {
            actionBtn.href = "/certificate";
            let data = <%-JSON.stringify(data)%>;
            console.log("data",data);  
            let certificateData = {
                stdName: data.stdName,
                stdClass: data.stdClass,
                college: data.college,
                result: data.result,
                event: data.event,
                venue: data.venue,
                eventDate: data.eventDate,
                resultDate: data.resultDate,
                signature: data.signature
            };
            sessionStorage.setItem("certificateData", JSON.stringify(certificateData));  
        }
        else if(resultText == "Registration") {
            actionBtn.href = "/events";
        }
        else if(resultText == "Event" || resultText == "Results") {
            actionBtn.href = "/admin";
        }
        else {
            actionBtn.href = "/home";
        }
    </script>
</body>
</html>